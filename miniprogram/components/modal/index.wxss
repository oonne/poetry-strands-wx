.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
  opacity: 0;
  transition: all 0.3s ease-in-out;
}

.modal-mask.show {
  opacity: 1;
}

.modal-content {
  width: 62%;
  max-height: 80vh;
  overflow-y: auto;
  transform: scale(0.7);
  transition: all 0.3s ease-in-out;
}

.modal-content.show {
  transform: scale(1);
}
